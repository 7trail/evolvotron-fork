#!/bin/bash

# Execute this to package up evolvotron as a .tar.gz

VERSION=`./VERSION`

cd ..

# NB Don't ship automatically generated .h file or contents of pkg
PRUNE='-name moc -prune -o -name obj -prune -o -name pkg_* -prune -o -name usage_text.h -prune'

FILES_MISC=`ls evolvotron/{README,BUILD,LICENSE,TODO,CHANGES,VERSION,USAGE,BUGS,configure,doxygen.cfg,mktgz,mkdoc,text_to_markup.py} evolvotron/libfunction/update_register_all_functions`
FILES_EXTRAS="`ls evolvotron/extras/{README,spheremap.pov,spheremap.sh}` `ls evolvotron/rpm/{README,evolvotron.spec}`"

FILES_H=`find evolvotron       ${PRUNE} -o -name '*.h'   -print`
FILES_CPP=`find evolvotron     ${PRUNE} -o -name '*.cpp' -print`
FILES_PRO=`find evolvotron     ${PRUNE} -o -name '*.pro' -print`
FILES_MAN=`find evolvotron/man ${PRUNE} -o -name '*.1'   -print`

FILES="$FILES_MISC $FILES_EXTRAS $FILES_H $FILES_CPP $FILES_PRO $FILES_MAN"

tar cvfz evolvotron/evolvotron.tar.gz $FILES

echo "***"
echo "*** Suggestion: mv evolvotron.tar.gz evolvotron-$VERSION.tar.gz"
echo "***"


